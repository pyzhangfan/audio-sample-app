		<!--style="@style/Widget.Dialog"-->
<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		xmlns:tools="http://schemas.android.com/tools"
		android:orientation="vertical"
		android:background="@color/white"
		android:paddingStart="@dimen/spacing_xnormal"
		android:paddingEnd="@dimen/spacing_xnormal"
		android:paddingTop="@dimen/spacing_xnormal"
		android:paddingBottom="@dimen/spacing_normal"
		xmlns:android="http://schemas.android.com/apk/res/android">

	<TextView
			android:id="@+id/dialog_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/spacing_normal"
			android:textColor="@color/md_black_1000"
			tools:text="Dialog Title"
			android:textAppearance="@style/TextAppearance.DialogTitle" />

	<TextView
			android:id="@+id/dialog_content"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/spacing_normal"
			android:layout_marginTop="@dimen/spacing_normal"
			android:textSize="@dimen/text_xmedium"
			android:textColor="@color/md_black_1000"
			tools:text="Please allow!"
			android:textAppearance="@style/TextAppearance.DialogContent" />

	<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="end"
			android:layout_gravity="end"
			android:layout_marginTop="@dimen/spacing_normal"
			android:orientation="horizontal">

		<Button
				android:id="@+id/dialog_negative_btn"
				style="@style/Widget.BorderlessButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingStart="@dimen/spacing_normal"
				android:paddingEnd="@dimen/spacing_normal"
				android:paddingLeft="@dimen/spacing_normal"
				android:paddingRight="@dimen/spacing_normal"
				android:text="@string/btn_deny" />

		<Button
				android:id="@+id/dialog_positive_btn"
				style="@style/Widget.RaisedButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="@dimen/text_normal"
				android:paddingStart="@dimen/spacing_normal"
				android:paddingEnd="@dimen/spacing_normal"
				android:paddingLeft="@dimen/spacing_normal"
				android:paddingRight="@dimen/spacing_normal"
				android:layout_marginStart="@dimen/spacing_small"
				android:text="@string/btn_ok" />

	</LinearLayout>
</LinearLayout>

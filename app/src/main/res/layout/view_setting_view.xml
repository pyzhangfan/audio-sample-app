<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		tools:parentTag="android.widget.LinearLayout">

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:visibility="visible"
			android:paddingStart="@dimen/spacing_normal"
			android:paddingEnd="@dimen/spacing_small"
			android:orientation="horizontal">

		<ImageView
				android:id="@+id/setting_image"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="?android:selectableItemBackgroundBorderless"
				android:contentDescription="@null"
				android:layout_marginEnd="@dimen/spacing_small"
				android:visibility="gone"
				android:layout_gravity="center_vertical|end"
				tools:src="@drawable/ic_color_lens"/>

		<TextView
				android:id="@+id/setting_title"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textSize="@dimen/text_medium"
				android:textColor="@color/white"
				android:fontFamily="sans-serif-light"
				android:layout_marginBottom="@dimen/spacing_tiny"
				android:layout_gravity="start|bottom"
				tools:text="Theme color"/>

		<ImageButton
				android:id="@+id/setting_btn_info"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="?android:selectableItemBackgroundBorderless"
				android:contentDescription="@null"
				android:visibility="visible"
				android:layout_gravity="center_vertical|end"
				android:padding="@dimen/spacing_xsmall"
				android:src="@drawable/ic_info"/>

	</LinearLayout>

	<com.dimowner.audiorecorder.app.widget.ChipsView
			android:id="@+id/chips_view"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingStart="@dimen/spacing_small"
			android:paddingEnd="@dimen/spacing_small"
			app:chipColor="@color/white_transparent_80"
			app:chipRadius="@dimen/spacing_normal"
			app:rippleColor="@color/white_transparent_50"
			app:borderWidth="@dimen/border"
			app:borderColor="@color/white_transparent_10"
			app:chipTextSelectedColor="@color/white"
			app:chipTextColor="@color/white_transparent_20"
			app:chipTextSize="@dimen/text_medium"
			app:chipPadding="@dimen/spacing_xsmall"
			app:chipMargin="3dp"
			app:orderEffective="false"
			app:multiSelect="false"
			/>

</merge>
